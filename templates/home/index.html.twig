{% extends 'admin.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}


<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
    <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
            class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
</div>

<!-- Content Row -->
<!-- ROW 1 -->
<div class="row">

    <!-- Nombre total de commandes -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Commandes</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ order }}</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Commandes payées -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Commandes Payées</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ nbreOrderPaye }}</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

   <!-- Commandes non payées -->
<div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-danger shadow h-100 py-2">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Commandes Non Payées</div>
                    <div class="row no-gutters align-items-center">
                        <div class="col-auto">
                            <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">
                                {{ nbreOrderNonPaye }}
                            </div>
                        </div>
                        <div class="col">
                            <div class="progress progress-sm mr-2">
                                <div class="progress-bar bg-danger" role="progressbar"
                                     style="width: {{ pourcentageOrderNonPaye }}%"
                                     aria-valuenow="{{ pourcentageOrderNonPaye }}"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-auto">
                    <i class="fas fa-times-circle fa-2x text-gray-300"></i>
                </div>
            </div>
        </div>
    </div>
</div>


    <!-- Montant non payé -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Montant Non Payé</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ montantNonPaye|number_format(0, ',', ' ') }} GNF</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-money-bill-wave-alt fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- ROW 2 -->
<div class="row">

    <!-- Montant payé -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Montant Payé</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ montantPaye|number_format(0, ',', ' ') }} GNF</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-wallet fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Montant total des commandes -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Montant Total Commandes</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ montantTotal|number_format(0, ',', ' ') }} GNF</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-file-invoice-dollar fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Chiffre d'affaires -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-dark shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-dark text-uppercase mb-1">
                            Chiffre d'Affaires</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ montantPaye|number_format(0, ',', ' ') }} GNF</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Nombre de clients -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Clients</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ client }}</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


<!-- Content Row -->
<div class="row">

    <!-- Graphique Chiffre d'affaires -->
    <div class="col-xl-8 col-lg-7">
        <div class="card shadow mb-4">
            <!-- En-tête -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Évolution du chiffre d'affaires</h6>
                <div class="dropdown no-arrow">
                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                        aria-labelledby="dropdownMenuLink">
                        <div class="dropdown-header">Options :</div>
                        <a class="dropdown-item" href="#">Exporter PDF</a>
                        <a class="dropdown-item" href="#">Actualiser</a>
                    </div>
                </div>
            </div>

            <!-- Corps -->
            <div class="card-body">
                <div class="chart-area">
                    <canvas id="chiffreAffaireChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Répartition du stock -->
    <div class="col-xl-4 col-lg-5">
        <div class="card shadow mb-4">
            <!-- En-tête -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Répartition du stock</h6>
                <div class="dropdown no-arrow">
                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                        aria-labelledby="dropdownMenuLink">
                        <div class="dropdown-header">Actions :</div>
                        <a class="dropdown-item" href="#">Afficher les détails</a>
                        <a class="dropdown-item" href="#">Rafraîchir</a>
                    </div>
                </div>
            </div>

            <!-- Corps -->
            <div class="card-body">
                <div class="chart-pie pt-4 pb-2 text-center">
                    <canvas id="stockPieChart" style="display: inline-block; max-width: 100%; height: auto;"></canvas>
                </div>
                <div class="mt-4 text-center small">
                    <span class="mr-2"><i class="fas fa-circle text-success"></i> En stock</span>
                    <span class="mr-2"><i class="fas fa-circle text-warning"></i> Faible</span>
                    <span class="mr-2"><i class="fas fa-circle text-danger"></i> Épuisé</span>
                </div>
            </div>
        </div>
    </div>

</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Chiffre d'affaires mensuel
    const caCtx = document.getElementById("chiffreAffaireChart").getContext("2d");
    new Chart(caCtx, {
        type: 'line',
        data: {
            labels: ['Janv', 'Fév', 'Mars', 'Avril', 'Mai', 'Juin'],
            datasets: [{
                label: 'Chiffre d’affaires (GNF)',
                data: [2000000, 2500000, 1800000, 3000000, 2700000, 3500000],
                backgroundColor: 'rgba(78, 115, 223, 0.05)',
                borderColor: 'rgba(78, 115, 223, 1)',
                borderWidth: 2,
                tension: 0.3
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    display: false
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        callback: value => value.toLocaleString('fr-FR') + ' GNF'
                    }
                }
            }
        }
    });

    // Répartition du stock
    const stockCtx = document.getElementById("stockPieChart").getContext("2d");
    new Chart(stockCtx, {
        type: 'doughnut',
        data: {
            labels: ["En stock", "Faible", "Épuisé"],
            datasets: [{
                data: [65, 20, 15],
                backgroundColor: ['#1cc88a', '#f6c23e', '#e74a3b'],
                hoverBackgroundColor: ['#17a673', '#dda20a', '#be2617'],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    display: false
                }
            },
            cutout: '70%'
        }
    });
</script>

{% endblock %}