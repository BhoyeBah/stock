{% extends 'admin.html.twig' %}

{% block body %}
<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-header">
                    <h4 class="mb-0">Réapprovisionnement du produit : {{ product.designation }}</h4>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_label(form.quantityAjout, 'Quantité à ajouter', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.quantityAjout, {'attr': {'class': 'form-control', 'min': '1'}}) }}
                        {{ form_errors(form.quantityAjout) }}
                    </div>

                    <button type="submit" class="btn btn-primary">Ajouter au stock</button>

                    {{ form_end(form) }}

                    <hr>

                    <p>Stock actuel : <strong>{{ product.quantite }}</strong></p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}