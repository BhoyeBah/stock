<!-- Default Basic Forms Start -->
{{ form_start(form, { attr: { class: 'container' } }) }}

<!-- Corps du formulaire -->
<div class="card-body">
    <div class="row g-3">

        <!-- Nom du client -->
        <div class="col-lg-12">
            <div class="form-group">
                {{ form_label(form.nom, 'Nom du client') }}
                {{ form_widget(form.nom, { attr: { class: 'form-control', placeholder: 'Entrez le nom du client' } }) }}
                <div class="text-danger">
                    {{ form_errors(form.nom) }}
                </div>
            </div>
        </div>

        <!-- Prénom -->
        <div class="col-lg-12">
            <div class="form-group">
                {{ form_label(form.prenom, 'Prénom') }}
                {{ form_widget(form.prenom, { attr: { class: 'form-control', placeholder: 'Entrez le prénom' } }) }}
                <div class="text-danger">
                    {{ form_errors(form.prenom) }}
                </div>
            </div>
        </div>

        <!-- Téléphone -->
        <div class="col-lg-12 mt-4">
            <div class="form-group">
                {{ form_label(form.telephone, 'Téléphone') }}
                {{ form_widget(form.telephone, { attr: { class: 'form-control', placeholder: 'Entrez le numéro du téléphone' } }) }}
                <div class="text-danger">
                    {{ form_errors(form.telephone) }}
                </div>
            </div>
        </div>

        <!-- Adresse -->
        <div class="col-lg-12 mt-4">
            <div class="form-group">
                {{ form_label(form.adresse, 'Adresse') }}
                {{ form_widget(form.adresse, { attr: { class: 'form-control', placeholder: 'Entrez l\'adresse du client' } }) }}
                <div class="text-danger">
                    {{ form_errors(form.adresse) }}
                </div>
            </div>
        </div>

    </div>
</div>

<!-- Bouton de soumission -->
<div class="card-action text-center mb-4">
    <button type="submit" class="btn btn-primary">
        {{ button_label|default('Enregistrer') }}
    </button>
</div>

{{ form_end(form) }}
