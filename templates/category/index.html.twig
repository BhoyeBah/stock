{% extends 'admin.html.twig' %}

{% block title %}Liste des catégories{% endblock %}


{% block body %}
<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Tables</h1>
<p class="mb-4">
    DataTables est un plugin tiers utilisé pour générer le tableau ci-dessous.
    Pour plus d'informations, visitez la
    <a target="_blank" href="https://datatables.net">documentation officielle de DataTables</a>.
</p>

<!-- DataTable Centré et Réduit -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow mb-4">

                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Liste des catégories</h6>
                    <a href="{{ path('app_category_new') }}" class="btn btn-primary">Ajouter</a>
                </div>
                {% include 'partials/flash_messages.html.twig' %}
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for category in categories %}
                                <tr>
                                    <td>{{ category.nom }}</td>
                                    <td>
                                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-info btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        {{ include('category/_delete_form.html.twig') }}
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="2">Aucune catégorie enregistrée !</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
{% endblock %}